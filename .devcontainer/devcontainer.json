// For format details, see https://aka.ms/devcontainer.json. For config options, see the
{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
	"features": {
		"ghcr.io/va-h/devcontainers-features/uv:1": {},
		"ghcr.io/devcontainers/features/rust:1": {
			"version": "stable"
		}
	},

	// Use 'mounts' to make the cargo and uv cache persistent in Docker Volumes.
	"mounts": [
		{
			"source": "devcontainer-cargo-cache-${devcontainerId}",
			"target": "/usr/local/cargo",
			"type": "volume"
		},
		{
			"source": "devcontainer-uv-cache-${devcontainerId}",
			"target": "/.cache/uv",
			"type": "volume"
		}
	],

	"postCreateCommand": "uv pip install -U pytest black flake8 && cd ~ && git clone --depth 1 --filter=blob:none --sparse https://github.com/openai/codex.git && git -C codex sparse-checkout set codex-rs && cargo install --path codex/codex-rs/cli && rustup default stable",

	"containerEnv": {
		"LC_ALL": "C",
		"GIT_AUTHOR_NAME": "ðŸ¤– Codex-CLI",
		"GIT_AUTHOR_EMAIL": "codex-cli[bot]@users.noreply.github.com",
		"PYTHONUNBUFFERED": "1",
		"PYTHONDONTWRITEBYTECODE": "1",
		"UV_SYSTEM_PYTHON": "1",
		"UV_COMPILE_BYTECODE": "1",
		"UV_LINK_MODE": "copy"
	},

	// Additional Python development configurations
	"forwardPorts": [7860],
	"portsAttributes": {
		"7860": {
			"label": "Python Dev Server",
			"onAutoForward": "notify"
		}
	},

	// VS Code extensions to install
	"customizations": {
		"vscode": {
			"extensions": [
				"vadimcn.vscode-lldb",
				"fill-labs.dependi",
				"LittleFoxTeam.vscode-python-test-adapter",
				"hbenl.vscode-test-explorer",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"ms-vscode-remote.remote-containers",
				"donjayamanne.python-extension-pack",
				"ms-python.black-formatter",
				"ms-python.flake8"
			],
			"settings": {
				"chat.tools.autoApprove": true,
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter"
				},
				"flake8.args": [
					"--max-line-length=100",
					"--ignore=E131,E302"
				],
				"black-formatter.args": [
					"--line-length=100",
					"--skip-string-normalization"
				]
			}
		}
	},

	"remoteUser": "root"
}
